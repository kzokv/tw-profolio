{
  "name": "tw-portfolio",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "npm run build -w libs/domain -w libs/shared-types && npm run build -w @tw-portfolio/api -w @tw-portfolio/web",
    "dev": "set -a; [ -f ./.env ] && . ./.env; set +a; npm run dev -w apps/api & npm run dev -w apps/web",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test -w libs/domain",
    "test:integration": "npm run test:integration -w apps/api",
    "test:e2e": "npm run test -w @tw-portfolio/web",
    "test:e2e:ci": "npm run test:e2e:ci -w @tw-portfolio/web",
    "test:e2e:show-report": "npm run test:e2e:show-report -w @tw-portfolio/web",
    "onboard": "bash scripts/onboard.sh",
    "install:full": "bash scripts/onboard.sh --install-only",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:cleanup": "bash scripts/docker-cleanup.sh",
    "docker:cleanup:dry-run": "bash scripts/docker-cleanup.sh --dry-run",
    "docker:cleanup:yes": "bash scripts/docker-cleanup.sh --yes"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.51.1",
    "eslint": "^9.15.0",
    "eslint-plugin-playwright": "^2.8.0",
    "typescript-eslint": "^8.15.0"
  }
}
