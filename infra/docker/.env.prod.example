##########################
# Public domains (single source of truth for tunnel routing and CORS)
PUBLIC_DOMAIN_WEB=twp-web.kzokvdevs.dpdns.org
PUBLIC_DOMAIN_API=twp-api.kzokvdevs.dpdns.org

##########################
# Postgres
POSTGRES_USER=twp
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=tw_portfolio

##########################
# Redis
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

##########################
# Cloudflare Tunnel
CLOUDFLARE_TUNNEL_TOKEN=PASTE_YOUR_TUNNEL_TOKEN_HERE

##########################
# Application (passed to twp-prod-api via env_file)
NODE_ENV=production
AUTH_MODE=oauth
PERSISTENCE_BACKEND=postgres
API_PORT=4000
WEB_PORT=3000
DATA_PROVIDER_TIMEOUT_MS=3000
PRIMARY_PROVIDER=mock-primary
FALLBACK_PROVIDER=mock-fallback
# ALLOWED_ORIGINS is set in docker-compose.prod.yml via Compose interpolation
# (env_file does not support variable expansion)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_MUTATIONS=120

##########################
# Optional state paths (defaults to $HOME/.local/state/tw-portfolio)
# TWP_STATE_DIR=/home/ubuntu/.local/state/tw-portfolio
# BACKUP_DIR=/home/ubuntu/.local/state/tw-portfolio/backups
# DEPLOY_LOG_DIR=/home/ubuntu/.local/state/tw-portfolio/logs/deploy
